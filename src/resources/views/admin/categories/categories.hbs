<div class="app-title">
  <ul class="app-breadcrumb breadcrumb side">
    <li class="breadcrumb-item active"><a href="#"><b>Danh sách sản phẩm</b></a></li>
  </ul>
  <div id="clock"></div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="tile">
      <div class="tile-body">
        <div class="row element-button">
          <div class="col-sm-2">

            <a class="btn btn-add btn-sm" href="/admin/categories/add-category" title="Thêm"><i class="fas fa-plus"></i>
              Tạo mới danh mục</a>
          </div>
          <div class="col-sm-2">

          </div>
        </div>
        <table class="table table-hover table-bordered" id="sampleTable">
          <thead>
            <tr>

              <th>Mã sản phẩm</th>
              <th>Tên sản phẩm</th>

              <th>Chức năng</th>
            </tr>
          </thead>
          <tbody>
            {{#each categories}}
            <tr>
              <td>{{this.id}}</td>
              <td>{{this.name}}</td>

              <td><button {{!-- href="/admin/categories/delete?id={{this.id}}" --}} class="btn btn-danger btn-sm trash"
                  type="button" title="Xóa" {{! data-toggle="modal" data-target="#ModalUP" }} data-bs-toggle="modal"
                  data-bs-target="#modalDelete" data-bs-id="{{this.id}}" {{! onclick="myFunction(this)" }}><i
                    class="fas fa-trash-alt"></i>
                </button>
                <a href="/admin/categories/edit-category?id={{this.id}}" class="btn btn-primary btn-sm edit"
                  type="button" title="Sửa" id="show-emp"><i class="fas fa-edit"></i></a>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<form name="form-delete-category" method="post"></form>

<!--
  MODAL
-->
<div class="modal fade" id="modalDelete" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5 text-black" id="exampleModalLabel">Bạn có muốn xóa
          không ?</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      {{! <div class="modal-body">
        ...
      </div> }}
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>

        <button id="btn-delete" type="button" class="btn btn-danger">Xóa</button>
      </div>
    </div>
  </div>
</div>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    var idCategory; var
      exampleModal = document.getElementById('modalDelete'); var btnDelete =
        document.getElementById('btn-delete'); var deleteForm =
          document.forms['form-delete-category'];
    exampleModal.addEventListener('show.bs.modal', event => { // Button that const
      btn = event.relatedTarget; idCategory = btn.getAttribute('data-bs-id');
    });
    btnDelete.addEventListener('click', (event) => {
      deleteForm.action =
        `/admin/categories/delete-category?id=${idCategory}&_method=DELETE`;
      deleteForm.submit();
    });
  });

</script>
